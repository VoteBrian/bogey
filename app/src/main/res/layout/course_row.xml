<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/course_row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/card_vertical_margin"
        android:paddingRight="@dimen/card_horizontal_margin"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/course_row_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/card_horizontal_margin"
        android:paddingBottom="@dimen/card_horizontal_margin"
        android:textSize="14sp" />

</LinearLayout>