<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:contentPadding="@dimen/activity_vertical_margin"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/games_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="22sp"
                android:text="Temp Golf Course" />

            <TextView
                android:id="@+id/games_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                android:text="Date" />

            <!-- SCORES -->

            <TextView
                android:id="@+id/txt_name1A"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/games_title"
                android:textSize="14sp"
                android:text="Name"/>

            <TextView
                android:id="@+id/txt_score1A"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/txt_name1A"
                android:layout_toRightOf="@id/txt_name1A"
                android:layout_below="@id/games_title"
                android:textSize="14sp"
                android:text="xx"/>

            <TextView
                android:id="@+id/txt_name1B"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_name1A"
                android:textSize="14sp"
                android:text="Name"/>

            <TextView
                android:id="@+id/txt_score1B"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/txt_name1B"
                android:layout_toRightOf="@id/txt_name1B"
                android:layout_below="@id/txt_name1A"
                android:textSize="14sp"
                android:text="xx"/>



            <TextView
                android:id="@+id/txt_name2A"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:layout_toEndOf="@id/txt_score1A"
                android:layout_toRightOf="@id/txt_score1A"
                android:layout_below="@id/games_title"
                android:textSize="14sp"
                android:text="Name"/>

            <TextView
                android:id="@+id/txt_score2A"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/txt_name2A"
                android:layout_toRightOf="@id/txt_name2A"
                android:layout_below="@id/games_title"
                android:textSize="14sp"
                android:text="xx"/>

            <TextView
                android:id="@+id/txt_name2B"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:layout_toEndOf="@id/txt_score1B"
                android:layout_toRightOf="@id/txt_score1B"
                android:layout_below="@id/txt_name2A"
                android:textSize="14sp"
                android:text="Name"/>

            <TextView
                android:id="@+id/txt_score2B"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/txt_name2B"
                android:layout_toRightOf="@id/txt_name2B"
                android:layout_below="@id/txt_name2A"
                android:textSize="14sp"
                android:text="xx"/>

            <TextView
                android:id="@+id/txt_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"
                android:text="F" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>